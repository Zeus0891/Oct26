{
  "name": "erp-multitenant-backend",
  "version": "1.0.0",
  "description": "ERP Multitenant SaaS Backend with Express, Prisma, and PostgreSQL (Neon Cloud)",
  "main": "dist/src/core/server.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development CLIENT_URLS=http://localhost:3000 USE_CORE_INFRASTRUCTURE=true ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/core/server.ts",
    "typecheck": "tsc --noEmit",
    "build": "npm run prisma:generate && tsc && node scripts/create-dist-index.cjs",
    "build:full": "rm -rf dist && npm run build",
    "start": "cross-env USE_CORE_INFRASTRUCTURE=true node dist/src/core/server.js",
    "start:prod": "NODE_ENV=production USE_CORE_INFRASTRUCTURE=true node dist/src/core/server.js",
    "deploy": "npm run migrate:deploy && npm run build",
    "prisma:generate": "prisma generate",
    "migrate:dev": "prisma migrate dev",
    "migrate:deploy": "prisma migrate deploy",
    "migrate:status": "prisma migrate status",
    "migrate:reset": "prisma migrate reset --force",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "seed": "ts-node prisma/seed.ts",
    "seed:full": "ts-node prisma/seeds/main.ts",
    "test": "node run-tests.js",
    "test:rls": "node run-tests-withRLS.js",
    "test:rls:simple": "node run-tests-withRLS.js --simple",
    "auth:smoke": "node scripts/auth-smoke-test.cjs",
    "auth:smoke:db": "ts-node -r tsconfig-paths/register scripts/auth-tenant-smoke.ts",
    "auth:curl": "bash scripts/auth-curl-smoke.sh",
  "tenant:smoke": "bash scripts/tenant-lifecycle-smoke.sh",
  "tenant:test:e2e": "cross-env E2E=1 ts-node -r tsconfig-paths/register scripts/tenant-lifecycle.test.ts",
    "test:e2e": "cross-env E2E=1 jest --runInBand --detectOpenHandles --forceExit",
    "test:e2e:ci": "cross-env E2E=1 jest --runInBand --ci",
    "validate-security": "ts-node scripts/run-security-validation.ts",
    "validate-security-sql": "psql $DATABASE_URL -f scripts/validate-security.sql",
  "rls:check": "ts-node -r tsconfig-paths/register scripts/rls-integrity.test.ts",
    "db:reset": "bash ./scripts/reset-db.sh",
    "lint": "eslint src --ext .ts,.js",
    "lint:fix": "eslint src --ext .ts,.js --fix",
    "format": "prettier --write src/**/*.{ts,js,json}",
    "format:check": "prettier --check src/**/*.{ts,js,json}",
    "postinstall": "prisma generate"
  },
  "prisma": {
    "seed": "ts-node prisma/seeds/main.ts"
  },
  "keywords": [
    "erp",
    "multitenant",
    "saas",
    "express",
    "prisma",
    "postgresql"
  ],
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^6.18.0",
    "@prisma/extension-accelerate": "^2.0.2",
    "express": "^5.1.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.8.1",
    "@types/winston": "^2.4.4",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dayjs": "^1.11.18",
    "dotenv": "^16.3.1",
    "express-rate-limit": "^7.5.1",
    "express-slow-down": "^3.0.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "http-proxy-middleware": "^3.0.5",
    "ioredis": "^5.8.2",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^2.7.0",
    "uuid": "^9.0.1",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.17",
    "@types/ioredis": "^4.28.10",
    "@types/jest": "^29.5.12",
    "@types/js-yaml": "^4.0.9",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^1.4.12",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.2.0",
    "prettier": "^3.6.2",
  "prisma": "^6.18.0",
    "supertest": "^7.1.3",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "@types/express": "^5.0.4",
    "@types/node": "^24.9.1",
    "nodemon": "^3.1.10",
        "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
